{
  "name": "checklist",
  "version": "0.1.0",
  "description": "design checklist to improve quality of sitebuilder designs",
  "main": "source/client.js",
  "scripts": {
    "start": "brb serve --config='./webpack.shared.config'",
    "build": "NODE_ENV=production brb build --base-path=$BASE_PATH --config='./webpack.shared.config'",
    "build:staging": "ENV_FILE=.env.staging BASE_PATH='/checklist/' yarn build",
    "build:prod": "ENV_FILE=.env.production yarn run build",
    "deploy:staging": "yarn build:staging && brb deploy --target='gh-pages'",
    "deploy:prod": "yarn build:prod && brb deploy --target='s3' --bucket='blackbaud-sites.com' --prefix='checklist.blackbaud-sites.com'",
    "lint": "brb lint"
  },
  "author": "Everydayhero",
  "dependencies": {
    "boiler-room-builder": "^2.0.0",
    "boiler-room-runner": "^1.4.3",
    "constructicon": "^1.3.0",
    "copy-webpack-plugin": "^4.5.2",
    "cxsync": "^1.0.9",
    "dotenv-webpack": "^1.4.1",
    "es6-promise": "^4.0.5",
    "lodash": "^4.17.0",
    "minimal.css": "^1.0.1",
    "react": "^15.4.2",
    "react-color": "^2.14.1",
    "react-dom": "^15.4.2",
    "react-helmet": "^5.2.0",
    "react-router": "^3.0.5",
    "redux-thunk": "^2.2.0",
    "supporticon": "^2.1.4",
    "wcag-contrast": "^2.1.0"
  },
  "devDependencies": {
    "redux-logger": "^2.8.1"
  }
}
